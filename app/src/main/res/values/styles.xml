<resources>

    <!-- 拓展主题 theme. -->
    <style name="XUITheme" parent="XUIBaseTheme">
        <!--设置默认窗口的动画样式-->
        <item name="android:windowAnimationStyle">@style/WindowAnimStyle</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="XUITheme.Phone">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="xui_actionbar_height">?actionBarSize</item>
    </style>

    <style name="AppTheme.Launch">
        <item name="xui_config_color_splash_bg">@color/xui_config_color_white</item>
        <item name="xui_config_app_logo_bottom">@dimen/xui_config_app_logo_bottom</item>
        <item name="xui_config_company_logo_bottom">@dimen/xui_config_company_logo_bottom</item>
        <item name="android:windowBackground">@drawable/xui_config_bg_splash</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <!--窗体背景，这个背景能在第一时间显示, 避免启动时白屏，黑屏问题-->
    <style name="AppTheme.Launch.App">
        <!--注意修改图标-->
        <item name="xui_config_splash_app_logo">@drawable/ic_splash_app_logo_xui</item>
        <item name="xui_config_splash_company_logo">@drawable/ic_splash_company_logo</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--DialogTheme，用于将Activity作为Dialog的主题-->
    <style name="DialogTheme" parent="XUITheme.Phone">
        <!--设置dialog的背景，此处为系统给定的透明值-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--Dialog的windowFrame框为无-->
        <item name="android:windowFrame">@null</item>
        <!--无标题-->
        <item name="android:windowNoTitle">true</item>　　　　　
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--是否有覆盖-->
        <item name="android:windowContentOverlay">@null</item>
        <!--设置Activity出现方式-->
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <!--背景是否模糊显示-->
        <item name="android:backgroundDimEnabled">true</item>
    </style>





    <!--定义行样式-->
    <style name="EditInfoItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="sLeftTextSize">17sp</item>
        <item name="sLeftTextColor">@color/xui_config_color_black</item>
        <item name="sCenterTextColor">@color/xui_config_color_black</item>
        <item name="sLeftViewWidth">70dp</item>
        <item name="sLeftViewGravity">left_center</item>
        <item name="sCenterViewGravity">left_center</item>
        <item name="sCenterViewMarginLeft">2dp</item>
        <item name="sCenterViewMarginRight">2dp</item>
        <item name="sDividerLineHeight">2dp</item>
        <item name="sRightTextSize">16sp</item>
        <item name="sRightViewMarginRight">0dp</item>
        <item name="sUseRipple">true</item>
        <item name="sEnableEdit">true</item>
    </style>
    <!--定义行样式-->
    <style name="TextInfoItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="sLeftTextSize">17sp</item>
        <item name="sLeftTextColor">@color/xui_config_color_black</item>
        <item name="sCenterTextColor">@color/xui_config_color_black</item>
        <item name="sLeftViewWidth">70dp</item>
        <item name="sLeftViewGravity">left_center</item>
        <item name="sCenterViewGravity">left_center</item>
        <item name="sCenterViewMarginLeft">2dp</item>
        <item name="sCenterViewMarginRight">2dp</item>
        <item name="sDividerLineHeight">2dp</item>
        <item name="sRightTextSize">16sp</item>
        <item name="sRightViewMarginRight">0dp</item>
        <item name="sUseRipple">true</item>
    </style>

    <!-- SwitchButton -->
    <style name="SwitchButtonStyle">
        <item name="android:paddingStart">?attr/xui_config_content_spacing_horizontal</item>
        <item name="android:paddingEnd">?attr/xui_config_content_spacing_horizontal</item>
        <item name="android:paddingTop">?attr/xui_config_content_spacing_vertical</item>
        <item name="android:paddingBottom">?attr/xui_config_content_spacing_vertical</item>
    </style>



    <!--定义按钮样式-->
    <style name="SuperButton.Primary.Submit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="sCornersRadius">0dp</item>
        <item name="sSelectorNormalColor">?attr/colorAccent</item>
        <item name="sSelectorPressedColor">?attr/colorAccent</item>
        <item name="android:textColor">@color/xui_config_color_white</item>
    </style>
    <style name="ButtonView.Green.Submit">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="sCornersRadius">0dp</item>
        <item name="background">@color/xui_config_color_blue</item>
        <item name="backgroundColor">@color/xui_config_color_blue</item>
    </style>
    <style name="ButtonView.Gray.Cancel">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="sCornersRadius">0dp</item>
    </style>
    <style name="myTransparent">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <!--自定义滚动条样式-->
    <style name="scrollRecyclerView">
        <item name="android:scrollbarSize">5dp</item>
        <item name="android:scrollbarThumbVertical">@color/colorPrimary</item>
        <item name="android:scrollbars">vertical</item>
    </style>

    <!--TabLayout-->
    <style name="TabText" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">@color/selector_tab_text_color</item>
        <item name="android:textSize">?attr/xui_config_size_content_text</item>
    </style>

    <style name="TabText.Explain">
        <item name="android:textColor">@color/selector_tab_text_color</item>
        <item name="android:textSize">?attr/xui_config_size_explain_text</item>
    </style>

    <style name="TabLayoutStyle" parent="Base.Widget.Design.TabLayout">
        <item name="tabIndicatorColor">?attr/colorAccent</item>
        <item name="tabIndicatorHeight">2dp</item>
        <item name="tabPaddingStart">12dp</item>
        <item name="tabPaddingEnd">12dp</item>
        <item name="android:background">@color/xui_config_color_white</item>
        <item name="tabBackground">?attr/selectableItemBackground</item>
        <item name="tabTextAppearance">@style/TabText</item>
        <item name="tabSelectedTextColor">?attr/colorAccent</item>
        <item name="tabTextColor">@color/xui_config_color_gray_6</item>
    </style>

    <!-- 自定义默认二维码扫描界面的主题. -->
    <style name="XQRCodeTheme.Custom">
        <item name="ViewfinderViewStyle">@style/ViewfinderView.Custom</item>
    </style>

    <style name="ViewfinderView.Custom">
        <item name="inner_corner_color">#FF9900</item>
        <!--<item name="inner_scan_bitmap">@drawable/ic_qrcode_scanning</item>-->
        <item name="inner_corner_width">6dp</item>
        <item name="inner_scan_bitmap_tint">#FF9900</item>
        <item name="inner_scan_animation_interval">25</item>
    </style>
    <style name="AppTheme.Camera">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    <style name="ButtonView.White">
        <item name="textSolidColor">@color/white</item>
        <item name="textSelectedSolidColor">@color/app_color_theme_10</item>
        <item name="android:textColor">@color/xui_config_color_blue</item>
    </style>
    <style name="TextStyle.Calendar">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/xui_config_color_content_text</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="MyTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>
    <style name="MyTextView_Wrap">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="MyLittleTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
    </style>


    <!--日期选择框-->
    <style name="EditText.DateView">
        <item name="android:background">@drawable/bg_date_edit</item>
    </style>





    <style name="winAnimation">
        <item name="android:windowEnterAnimation">@anim/xpage_alpha_in</item>
        <item name="android:windowExitAnimation">@anim/xpage_alpha_out</item>
    </style>

</resources>
