<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/llSearchBarSearchBar"
    android:layout_width="fill_parent"
    android:layout_height="60dp"
    android:background="@color/menu_white_normal"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="0dp">
    <com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText
        android:id="@+id/tv_search_item"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:focusable="true"
        android:hint="请输入查询内容或者条件"
        android:textSize="22dp"
        android:layout_weight="1"
        android:layout_marginLeft="15dp"
        android:imeOptions="actionDone"
        >
        <requestFocus />
    </com.xuexiang.xui.widget.edittext.materialedittext.MaterialEditText>

    <ImageButton
        android:id="@+id/btn_scan"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/bg_item_to_alpha"
        android:scaleType="fitXY"
        android:src="@drawable/ic_expand_qrcode" />

</LinearLayout>