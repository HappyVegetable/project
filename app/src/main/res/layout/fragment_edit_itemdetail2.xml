<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/xui_config_bg_dialog_radius_white"

    >
   <!-- -->

    <LinearLayout
       android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        >
    <TextView
        android:id="@+id/tv_itemname"
        android:textSize="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="商品名称"
        android:textColor="#4A4A4A"
        android:layout_marginTop="10dp"
        />
     
    <TextView
        android:id="@+id/tv_itemno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="商品编码"
        android:textColor="@color/alpha_6"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="1"
            android:background="#CDC9C9"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xuexiang.xui.widget.textview.label.LabelTextView
            style="@style/MyTextView"
            android:layout_gravity="center_vertical"
            android:layout_weight="4"
            android:text="单位"
            />
        <TextView
            android:id="@+id/tv_unitno"
            style="@style/MyTextView"
            android:layout_weight="3.5"
            android:text="个"
            />
        <com.xuexiang.xui.widget.textview.label.LabelTextView
            style="@style/MyTextView"
            android:layout_weight="3.5"
            android:layout_marginLeft="20dp"
            android:text="规格"
            />
        <TextView
            android:id="@+id/tv_spec"
            style="@style/MyTextView"
            android:layout_weight="3.5"
            android:text="盒"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="1"
            android:background="#CDC9C9"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
       >
        <com.xuexiang.xui.widget.textview.label.LabelTextView
            style="@style/MyTextView"
            android:layout_weight="4"
            android:text="数量"
            />
        <EditText
            android:id="@+id/edit_item_count"

            android:layout_weight="3.5"
            android:textSize="17sp"
            android:inputType="number"
            android:maxLength="5"

            android:text="1"
            android:focusable="true"
            style="@style/EditText.DateView"
            android:focusableInTouchMode="true"
            android:selectAllOnFocus="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
        </EditText>
        <!--      -->
        <com.xuexiang.xui.widget.textview.label.LabelTextView
            style="@style/MyTextView"
            android:layout_weight="3.5"
            android:layout_marginLeft="20dp"
            android:text="零售价"
            />
        <TextView
            android:id="@+id/tv_saleprice"
            style="@style/MyTextView"
            android:layout_weight="3.5"
            android:text="20"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="1"
            android:background="#CDC9C9"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <com.xuexiang.xui.widget.textview.label.LabelTextView
            style="@style/MyTextView"
            android:layout_weight="4"
            android:text="单价"
            />
        <EditText
            android:id="@+id/edit_item_price"
            style="@style/EditText.DateView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="17sp"
            android:layout_weight="3.5"
            android:inputType="numberDecimal"
            android:maxLength="9"
            android:text="0"

            android:selectAllOnFocus="true"
            android:imeOptions="actionDone"
             />
        <com.xuexiang.xui.widget.textview.label.LabelTextView
            style="@style/MyTextView"
            android:layout_weight="3.5"
            android:layout_marginLeft="20dp"
            android:text="库存"
            />
        <TextView
            android:id="@+id/tv_kucun"
            style="@style/MyTextView"
            android:layout_weight="3.5"
            android:text="1000"
            />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="1"
            android:background="#CDC9C9"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <com.xuexiang.xui.widget.textview.label.LabelTextView

                style="@style/MyTextView_Wrap"
                android:text="生产日期"
                android:layout_marginRight="20dp"
                />
            <com.xuexiang.xui.widget.textview.label.LabelTextView
                android:id="@+id/edit_item_producedte"
                android:background="@drawable/xui_config_color_edittext_normal"
                android:textAlignment="center"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:textSize="17sp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_weight="1"
            android:background="#CDC9C9"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <com.xuexiang.xui.widget.textview.label.LabelTextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:gravity="center_vertical"
                    android:textSize="17sp"
                    android:text="已扫"
                    />
                <TextView
                    android:id="@+id/tv_item_realcount"
                    style="@style/MyTextView"
                    android:textColor="@color/app_color_theme_1"
                    android:text="0"
                    android:layout_marginLeft="20dp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:orientation="horizontal">
                <com.xuexiang.xui.widget.button.ButtonView
                    style="@style/ButtonView.White"
                    android:id="@+id/btn_cancel"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:text="@string/lab_cancel"

                    />
                <com.xuexiang.xui.widget.button.ButtonView
                    style="@style/ButtonView.White"
                    android:id="@+id/btn_submit"
                    android:layout_width="65dp"
                    android:layout_height="40dp"
                    android:text="@string/submit_text"
                    />
            </LinearLayout>

        </LinearLayout>
</LinearLayout>



</LinearLayout>
